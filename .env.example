# Providence — API Keys and Configuration
# Copy this to .env and fill in your values.
# NEVER commit .env to version control.

# Anthropic (Claude) — used by adaptive agents
ANTHROPIC_API_KEY=sk-ant-...

# Polygon.io — market data (price, options, news)
POLYGON_API_KEY=

# SEC EDGAR — company filings
# No API key required, but you must set a User-Agent per SEC policy:
EDGAR_USER_AGENT=Providence/0.1.0 (your-email@example.com)

# FRED — Federal Reserve Economic Data
FRED_API_KEY=

# Pipeline configuration
PROVIDENCE_LOG_LEVEL=INFO
PROVIDENCE_DATA_DIR=/app/data
PROVIDENCE_INTERVAL_SECONDS=300
PROVIDENCE_DEFAULT_TIMEOUT=120
